# API Key per la trascrizione con Whisper
# Puoi usare Groq (gratuito) OPPURE OpenAI

# OPZIONE 1: Groq (CONSIGLIATO - gratuito e veloce)
# Registrati su https://console.groq.com e ottieni una API key
GROQ_API_KEY=your_groq_api_key_here

# OPZIONE 2: OpenAI (a pagamento)
# OPENAI_API_KEY=your_openai_api_key_here

# ═══════════════════════════════════════════════════════════════
# GESTIONE FILE
# ═══════════════════════════════════════════════════════════════

# Mantieni i file audio generati/copiati (true/false)
# Default: false (i file audio vengono eliminati dopo la trascrizione)
KEEP_AUDIO=false

# Mantieni i file video scaricati (true/false)
# Default: false (i file video vengono eliminati dopo la trascrizione)
KEEP_VIDEO=false

# ═══════════════════════════════════════════════════════════════
# PERCORSI DI ARCHIVIAZIONE (assoluti)
# ═══════════════════════════════════════════════════════════════

# Percorso dove salvare i video scaricati
# Default: ./downloads/videos (relativo alla cartella del progetto)
# VIDEO_PATH=C:\Media\Videos

# Percorso dove salvare i file audio estratti
# Default: ./downloads/audio (relativo alla cartella del progetto)
# AUDIO_PATH=C:\Media\Audio

# Percorso dove salvare le trascrizioni
# Default: ./output (relativo alla cartella del progetto)
# TRANSCRIPTION_PATH=C:\Media\Transcriptions
